{
    "name": "webexmachina/contao-auctions",
    "description": "Auctions for Contao Open Source CMS",
    "type": "contao-bundle",
    "license": "LGPL-3.0-or-later",
    "website" : "https://www.webexmachina.fr/",
    "authors": [
        {
            "name": "Web ex Machina",
            "homepage": "https://www.webexmachina.fr",
            "role":"Developer"
        }
    ],
    "support":{
        "issues":"https://github.com/webexmachina/contao-auctions/issues",
        "source":"https://github.com/webexmachina/contao-auctions"
    },
    "require": {
        "php": "^7.3",
        "contao/core-bundle": "^4.9",
        "terminal42/dcawizard": "~2.4",
        "webexmachina/contao-utils": "^0.3"
    },
    "autoload":{
        "psr-4": {
            "WEM\\AuctionsBundle\\": "src/"
        },
        "classmap": [
            "src/Resources/contao/"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config/",
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/",
            "src/Resources/contao/templates/"
        ]
    },
    "extra":{
        "contao-manager-plugin": "WEM\\AuctionsBundle\\ContaoManager\\Plugin"
    }
}